<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/card_view_item_recycler_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="4dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginTop="4dp"
                                    android:background="@color/white"
                                    android:foreground="?attr/selectableItemBackground"
                                    app:cardCornerRadius="4dp"
                                    app:cardElevation="2dp">

    <LinearLayout
            android:id="@+id/lyt_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/spacing_large"
            android:paddingTop="@dimen/spacing_large">


        <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/image_aircraft"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="@dimen/spacing_large"
                app:civ_shadow="true"
                app:civ_shadow_radius="0"
                app:civ_border_width="1dp"/>
        <View
                android:layout_width="@dimen/spacing_large"
                android:layout_height="0dp"/>

        <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/name_aircraft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cessna 172"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/grey_90"
                />

                <TextView
                        android:id="@+id/regnumber_aircraft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="JC-9274"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/grey_90"
                        android:textStyle="bold" />

                <TextView
                        android:id="@+id/airport_aircraft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Большое Грызлово"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/grey_40" />

            </LinearLayout>



        </RelativeLayout>

        <View
                android:layout_width="@dimen/spacing_smlarge"
                android:layout_height="0dp" />


    </LinearLayout>
</android.support.v7.widget.CardView>
